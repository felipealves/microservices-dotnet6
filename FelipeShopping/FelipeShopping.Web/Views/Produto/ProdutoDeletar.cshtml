@model ProdutoViewModel

<form asp-action="ProdutoDeletar">
    <input asp-for="Id" hidden />
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Deletar Produto</h1>
        <hr/>
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="col-2">
                <label asp-for="Nome" class="control-label pt-2" style="font-size=20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Nome" disabled class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="CategoriaNome" class="control-label pt-2" style="font-size=20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="CategoriaNome" disabled class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="Descricao" class="control-label pt-2" style="font-size=20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="Descricao" disabled class="form-control" rows="5" ></textarea>
            </div>

            <div class="col-2">
                <label asp-for="ImagemUrl" class="control-label pt-2" style="font-size=20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="ImagemUrl" disabled class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="Valor" class="control-label pt-2" style="font-size=20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Valor" disabled class="form-control" />
            </div>

            <div class="col-5 offset-2">
                <a asp-action="ProdutoIndex" class="btn-primary btn form-control">Voltar a lista</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Deletar" class="btn btn-danger form-control" />
            </div>
        </div>
    </div>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}