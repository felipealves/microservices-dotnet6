@model IEnumerable<ProdutoViewModel>

<br />
<br />
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
                <h1 class="text-primary">Lista de Produtos</h1>
        </div>
    </div>
    <div class="col text-end pt-1">
        <a asp-action="ProdutoCriar" class="btn btn-outline-primary">
            <i class="fas fa-plus"></i>Criar novo Produto
        </a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Categoria</th>
                <th>Valor</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Nome</td>
                    <td>@item.CategoriaNome</td>
                    <td>@item.Valor.ToString("c")</td>
                    <td>
                        <a asp-action="ProdutoEditar" class="btn btn-success" asp-route-id="@item.Id">
                            <i class="fas fa-edit"></i>
                        </a>
                        @if(User.IsInRole("Admin"))
                        {
                            <a asp-action="ProdutoDeletar" class="btn btn-danger" asp-route-id="@item.Id">
                                <i class="fas fa-edit"></i>
                            </a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>